<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            tools:context="com.pinkcabs.pinkcabs.SafetyActivity" />

        <TextView
            android:text="Nearest Police Station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_pol_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Address:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_pol_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Contact Number:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_pol_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Estimated Distance:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_pol_dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Estimated Time:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_pol_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Nearest Hospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_hosp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Address:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_hosp_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Contact Number:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_hosp_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Estimated Distance:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_hosp_dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Estimated Time:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_hosp_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>
</ScrollView>